{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,      
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "types": ["node"],
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./dist",
      "baseUrl": "./"      
    },
    "include": [      
      "src/themeManager/*.ts",
      "src/themeManager/*.js"       
    ],        
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  