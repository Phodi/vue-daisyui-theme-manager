{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/themeManager/*"]
    }
  },
  "include": [
    "src/themeManager/*.ts",
    "src/themeManager/*.d.ts",
    "src/themeManager/*.tsx",
    "src/themeManager/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
